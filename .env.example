# MongoDB Connection
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# Google Cloud Storage
GCS_BUCKET_NAME=your-bucket-name
# Either provide path to credentials file:
GOOGLE_APPLICATION_CREDENTIALS=path/to/your-project-credentials.json
# Or provide the credentials JSON directly:
# GCS_CREDENTIALS={"type":"service_account","project_id":"your-project-id",...}

# Authentication
SESSION_SECRET=your-session-secret

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Twilio SMS
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Mailgun Email
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain